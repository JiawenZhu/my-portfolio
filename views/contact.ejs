<!DOCTYPE html>
<html>
<head>
<%- include('header.ejs') %>   
<style>
body {font-family: Arial, Helvetica, sans-serif;}

input[type=text], select, textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    margin-top: 6px;
    margin-bottom: 16px;
    resize: vertical;
}

input[type=submit] {
    background-color: #4CAF50;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

input[type=submit]:hover {
    background-color: #45a049;
}

.container {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
}
</style>
</head>
<div id="header"></div>
<body style="background-color: lightgray">
        <pre class='title'><h3>Leave me<font size="15">Your</font><br/>&nbsp&nbsp&nbsp messages and <font>questions</font></h3></pre>

        <div class="container" style="height: 730px;">
          <form action='/formSubmition' method='GET'>
            <label for="fname">First Name</label>
            <input type="text" id="fname" name="firstname" placeholder="first name" required>
        
            <label for="email">Email </label> 
            <input type="text" id="email" name="email" placeholder="email" required>
        
            <label for="country">Country</label>
            <select id="country" name="country" onchange="selectCountry(value)">
                <option value="korean">한국</option>
                <option value="canada">Canada</option>
                <option value="usa" selected>USA</option>
                <option value="china">中国</option>
            </select>
            <script>
                function selectCountry(countryName){
                  if (countryName=="korean"){
                      document.getElementById('message').placeholder = "니가 필요한 걸 말해줘...";
                      document.getElementById('fname').placeholder = "이름";
                      document.getElementById('email').placeholder = "귀하의 이메일";
                  }
                  else if(countryName=="china"){
                      document.getElementById('message').placeholder = "告诉我你的需求...";
                      document.getElementById('fname').placeholder = "您的 姓名";
                      document.getElementById('email').placeholder = "您的 Email";
                  }else{
                      document.getElementById('message').placeholder = "tell me what you need...";
                      document.getElementById('fname').placeholder = "first name";
                      document.getElementById('email').placeholder = "email ";
                  }
                }
            </script>
            <textarea id= "message" type="text" name="message" style="height:200px" placeholder="tell me what you need...">
            </textarea>
                <input type="submit" value="Submit">
        </form>
        </div>
        
</body>
<%- include('footer.ejs') %>
</html>
